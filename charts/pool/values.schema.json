{
   "$schema": "http://json-schema.org/draft-07/schema#",
   "type": "object",
   "properties": {
      "watcherVersion": {
         "description": "Kube watcher version to install in the pool",
         "type": "string",
         "enum": ["0.4.24"]
      },
      "watcherImageTag": {
         "description": "Kube watcher image tag to install in the pool",
         "type": "string",
         "enum": ["2026.2.6", "latest"]
      },
      "watcherAdminKey": {
         "description": "Kube watcher admin key (full privileges)",
         "type": "string"
      },
      "watcherWriteKey": {
         "description": "Kube watcher write key (full namespace privileges)",
         "type": "string"
      },
      "watcherReadonlyKey": {
         "description": "Kube watcher readonly key (read only privileges)",
         "type": "string"
      },
      "kalavaiApiVersion": {
         "description": "Kalavai API service version to install in the pool",
         "type": "string",
         "enum": ["0.1.16"]
      },
      "kalavaiApiRingfenceNodeLabel": {
         "description": "Kalavai API service to ringfence nodes based on node label",
         "type": ["string", "null"]
      },
      "kalavaiApiRingfenceNodeLabelValue": {
         "description": "Kalavai API service to ringfence nodes based on node label value",
         "type": ["string", "null"]
      },
      "kalavaiApiImageTag": {
         "description": "Kalavai API service image tag to install in the pool",
         "type": "string",
         "enum": ["0.8.17", "latest"]
      },
      "resourceQuota": {
         "properties": {
            "enabled": {
               "type": "boolean",
               "description": "Enable resource quota"
            },
            "cpu": {
               "type": "integer",
               "description": "CPU requests and limits"
            },
            "memory": {
               "type": "string",
               "description": "Memory requests and limits"
            },
            "amd": {
               "type": "integer",
               "description": "AMD GPU requests and limits"
            },
            "nvidia": {
               "type": "integer",
               "description": "NVIDIA GPU requests and limits"
            }
         }
      },
      "ui": {
         "properties": {
            "enabled": {
               "type": "boolean",
               "description": "Enable UI"
            }
         }
      },
      "system": {
         "properties": {
            "priorityClassName": {
               "type": "string",
               "description": "PriorityClassName to use for the deployment"
            },
            "nodeSelectors": {
               "type": [
                  "object",
                  "null"
               ],
               "description": "target specific devices. Expected format -> key: value pairs, where 'value' is a list of elements"
            },
            "nodeSelectorsOps": {
               "type": "string",
               "enum": [
                  "OR",
                  "AND"
               ],
               "description": "Logical operation to use to apply to nodeSelectors. Accepted values: 'OR', 'AND'"
            },
            "jobId": {
               "type": "string",
               "description": "Id to tag spawned objects."
            }
         }
      }
   },
   "required": [
      "watcherAdminKey",
      "watcherWriteKey",
      "watcherReadonlyKey"
   ]
}